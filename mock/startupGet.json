[
  {
    "description": "模拟一个没有参数的get请求",
    "request": {
      "uri": "/getdemo",
      "method": "get"
    },
    "response": {
      "text": "这是一个没有参数的请求"
    }
  },
  {
    "description": "模拟一个带参数的get请求",
    "request": {
      "uri": "/getwithparam",
      "method": "get",
      "queries": {
        "name": "huhansan",
        "age": "18"
      }
    },
    "response": {
      "text": "hello world"
    }
  },
  {
    "description": "模拟一个带请求头的get请求",
    "request": {
      "uri": "/get/with/headers",
      "method": "get",
      "headers": {
        "content-type": "application/json"
      }
    },
    "response": {
      "text": "hello world"
    }
  }

]